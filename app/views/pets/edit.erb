<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %> </h2>

<form action="'/pets/<%= @pet.id %>" method="post">
<input type="hidden" name="_method" id="hidden" value="patch">
<label>Edit the Pet's name:</label>
<br>
    <input id="pet_name" type="text" name="pet[name]" value="<%= @pet.name %>">

    <br>
<p>Select an existing pet or create a new one below.</p>
 
 
<h3>Existing Owners</h3>
<% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%=owner.name%>" value="<%= owner.id %>" <%='checked' if @pet.owner.name == owner.name %>> <%= owner.name %> </input><br>
<% end %>
<br>

<label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input>
  <br></br>
  <input type="submit" value="Update Pet">

</form>
